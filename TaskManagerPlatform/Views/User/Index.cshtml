@model IList<TaskManagerPlatform.Domain.Users.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/User/Index.cshtml";
}


<section id="main-content">
    <section id="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-4">
                                <h3>Issues</h3>
                            </div>
                            <div class="col-md-6 col-md-offset-4">
                                <a style="float:right" class="btn btn-primary" asp-area="" asp-controller="Issue" asp-action="Create">
                                    <b>Create</b>
                                </a>
                            </div>
                        </div>
                    </header>
                    <div class="panel-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Email</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td>@item.SurName</td>
                                        <td>@item.Email</td> 
                                        <td>
                                            <a class="btn btn-primary" asp-controller="User" asp-action="Edit" asp-route-ID="@item.Id">
                                                Edit
                                            </a>
                                            <a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-ID="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                    i++;
                                }

                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

