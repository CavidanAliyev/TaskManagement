@model TaskManagerPlatform.Domain.Users.User
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/User/Index.cshtml";
}

<section id="main-content">
    <section id="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="col-md-4 col-md-offset-4">
                            <h3>add user</h3>
                        </div>
                    </header>
                    <div class="panel-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="name" asp-for="Name" placeholder="name">
                                </div>
                                <div class="col-md-6">
                                    <label for="surname" class="form-label">Surname</label>
                                    <input type="text" class="form-control" id="surname" asp-for="SurName" placeholder="surname">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="text" class="form-control" id="email" asp-for="Email" placeholder="email">
                                </div>  
                                <div class="col-md-6">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="text" class="form-control" id="password" asp-for="Password" placeholder="password">
                                </div> 
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" style="float:right; margin:5px" id="submit" class="btn btn-primary">Save</button>
                                    <a style="float:right;margin:5px" class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">
                                        <b>Back to list</b>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

