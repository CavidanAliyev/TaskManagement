@model TaskManagerPlatform.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "SignIn";
}


<section id="main-content">
    <section id="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="col-md-4 col-md-offset-4">
                            <h3>Sign In</h3>
                        </div>
                    </header>
                    <div class="panel-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="col-md-12">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="text" class="form-control" id="email" asp-for="Email" placeholder="email">
                                    </div>
                                    <div class="col-md-12">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="text" class="form-control" id="password" asp-for="Password" placeholder="password">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="submit" style="float:right; margin:5px" id="submit" class="btn btn-primary">Login</button>
                                    <a style="float:right;margin:5px" class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="SignUp">
                                        <b>Sign Up</b>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>



