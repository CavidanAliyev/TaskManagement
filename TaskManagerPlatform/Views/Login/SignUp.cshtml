@model TaskManagerPlatform.Domain.Organizations.Organization
@{
    ViewData["Title"] = "SignUp";
}

<section id="main-content">
    <section id="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="col-md-4 col-md-offset-4">
                            <h3>SignUp</h3>
                        </div>
                    </header>
                    <div class="panel-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="name" class="form-label">Organization name</label>
                                    <input type="text" data-val-required="The Organization name field is required." class="form-control" id="name" asp-for="OrganizationName" placeholder="organization name">
                                    <span asp-validation-for="OrganizationName" style="color:red"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <input type="number" class="form-control" id="phone" asp-for="PhoneNumber" placeholder="phone number">
                                </div>
                                <div class="col-md-6">
                                    <label for="address" class="form-label">Address</label>
                                    <input type="text" class="form-control" id="address" asp-for="Address" placeholder="address">
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="text" data-val-required="The Email field is required." class="form-control" id="email" asp-for="Email" placeholder="email">
                                    <span asp-validation-for="Email" style="color:red"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" class="form-control" id="username" asp-for="UserName" placeholder="username">
                                </div>
                                <div class="col-md-6">
                                    <label for="password" class="form-label">Password</label>
                                    <input data-val-required="The Password field is required." type="text" class="form-control" id="password" asp-for="Password" placeholder="password">
                                    <span asp-validation-for="Password" style="color:red"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" style="float:right; margin:5px" id="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

